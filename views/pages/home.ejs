<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Document</title>
</head>
<body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16 items-center">
          <div class="flex items-center">
            <h1 class="text-2xl font-bold text-indigo-600">HotelBooker</h1>
          </div>
          <div class="flex items-center space-x-4">
            <button class="bg-indigo-600 text-white px-4 py-2 rounded-lg hover:bg-indigo-700 transition-colors flex items-center">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
                <path d="M12 5v14M5 12h14"/>
              </svg>
              New Reservation
            </button>
          </div>
        </div>
      </div>
    </nav>

    <!-- Search Section -->
    <div class="bg-indigo-600">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <div class="bg-white rounded-xl shadow-lg p-6">
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="relative">
              <label class="block text-sm font-medium text-gray-700 mb-1">Location</label>
              <div class="relative">
                <input type="text" placeholder="Where are you going?" class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"/>
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="absolute left-3 top-2.5 text-gray-400">
                  <circle cx="11" cy="11" r="8"/>
                  <path d="m21 21-4.3-4.3"/>
                </svg>
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Check-in</label>
              <input type="date" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"/>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Check-out</label>
              <input type="date" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500"/>
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">Guests</label>
              <select class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-indigo-500">
                <option>1 Guest</option>
                <option>2 Guests</option>
                <option>3 Guests</option>
                <option>4+ Guests</option>
              </select>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Reservations List -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="flex justify-between items-center mb-8">
        <h2 class="text-2xl font-bold text-gray-900">Your Reservations</h2>
        <div class="flex space-x-2">
          <button class="px-4 py-2 text-sm font-medium text-indigo-600 bg-indigo-50 rounded-lg hover:bg-indigo-100">Upcoming</button>
          <button class="px-4 py-2 text-sm font-medium text-gray-600 hover:bg-gray-50 rounded-lg">Completed</button>
          <button class="px-4 py-2 text-sm font-medium text-gray-600 hover:bg-gray-50 rounded-lg">Cancelled</button>
        </div>
      </div>

      <!-- Reservation Cards -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <!-- Reservation 1 -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
          <div class="h-48 overflow-hidden relative">
            <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?auto=format&fit=crop&q=80&w=500" alt="Grand Plaza Hotel" class="w-full h-full object-cover"/>
            <div class="absolute top-4 right-4">
              <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-full">Upcoming</span>
            </div>
          </div>
          <div class="p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-lg font-semibold text-gray-900">Grand Plaza Hotel</h3>
                <p class="text-gray-600 flex items-center mt-1">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1">
                    <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
                    <circle cx="12" cy="10" r="3"/>
                  </svg>
                  New York, USA
                </p>
              </div>
              <div class="flex space-x-2">
                <button class="text-gray-600 hover:text-indigo-600">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/>
                    <path d="m15 5 4 4"/>
                  </svg>
                </button>
                <button class="text-gray-600 hover:text-red-600">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3 6h18"/>
                    <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/>
                    <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
                  </svg>
                </button>
              </div>
            </div>
            <div class="border-t border-gray-100 pt-4">
              <div class="flex justify-between text-sm">
                <div>
                  <p class="text-gray-500">Check-in</p>
                  <p class="font-medium">Apr 15, 2024</p>
                </div>
                <div>
                  <p class="text-gray-500">Check-out</p>
                  <p class="font-medium">Apr 20, 2024</p>
                </div>
                <div>
                  <p class="text-gray-500">Guests</p>
                  <p class="font-medium">2 Adults</p>
                </div>
              </div>
              <div class="mt-4 flex justify-between items-center">
                <div class="flex items-center">
                  <span class="text-2xl font-bold text-gray-900">$1,200</span>
                  <span class="text-gray-500 ml-1">total</span>
                </div>
                <button class="text-indigo-600 hover:text-indigo-700 font-medium">View Details →</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Reservation 2 -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
          <div class="h-48 overflow-hidden relative">
            <img src="https://images.unsplash.com/photo-1582719508461-905c673771fd?auto=format&fit=crop&q=80&w=500" alt="Seaside Resort" class="w-full h-full object-cover"/>
            <div class="absolute top-4 right-4">
              <span class="bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-full">Upcoming</span>
            </div>
          </div>
          <div class="p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-lg font-semibold text-gray-900">Seaside Resort & Spa</h3>
                <p class="text-gray-600 flex items-center mt-1">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1">
                    <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
                    <circle cx="12" cy="10" r="3"/>
                  </svg>
                  Miami, USA
                </p>
              </div>
              <div class="flex space-x-2">
                <button class="text-gray-600 hover:text-indigo-600">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/>
                    <path d="m15 5 4 4"/>
                  </svg>
                </button>
                <button class="text-gray-600 hover:text-red-600">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3 6h18"/>
                    <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/>
                    <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
                  </svg>
                </button>
              </div>
            </div>
            <div class="border-t border-gray-100 pt-4">
              <div class="flex justify-between text-sm">
                <div>
                  <p class="text-gray-500">Check-in</p>
                  <p class="font-medium">May 1, 2024</p>
                </div>
                <div>
                  <p class="text-gray-500">Check-out</p>
                  <p class="font-medium">May 7, 2024</p>
                </div>
                <div>
                  <p class="text-gray-500">Guests</p>
                  <p class="font-medium">3 Adults</p>
                </div>
              </div>
              <div class="mt-4 flex justify-between items-center">
                <div class="flex items-center">
                  <span class="text-2xl font-bold text-gray-900">$2,100</span>
                  <span class="text-gray-500 ml-1">total</span>
                </div>
                <button class="text-indigo-600 hover:text-indigo-700 font-medium">View Details →</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Reservation 3 -->
        <div class="bg-white rounded-xl shadow-sm overflow-hidden hover:shadow-md transition-shadow">
          <div class="h-48 overflow-hidden relative">
            <img src="https://images.unsplash.com/photo-1587213811864-46e59f6873b1?auto=format&fit=crop&q=80&w=500" alt="Mountain Lodge" class="w-full h-full object-cover"/>
            <div class="absolute top-4 right-4">
              <span class="bg-gray-100 text-gray-800 text-xs font-medium px-2.5 py-0.5 rounded-full">Completed</span>
            </div>
          </div>
          <div class="p-6">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-lg font-semibold text-gray-900">Mountain View Lodge</h3>
                <p class="text-gray-600 flex items-center mt-1">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-1">
                    <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
                    <circle cx="12" cy="10" r="3"/>
                  </svg>
                  Denver, USA
                </p>
              </div>
              <div class="flex space-x-2">
                <button class="text-gray-600 hover:text-indigo-600">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/>
                    <path d="m15 5 4 4"/>
                  </svg>
                </button>
                <button class="text-gray-600 hover:text-red-600">
                  <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M3 6h18"/>
                    <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/>
                    <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/>
                  </svg>
                </button>
              </div>
            </div>
            <div class="border-t border-gray-100 pt-4">
              <div class="flex justify-between text-sm">
                <div>
                  <p class="text-gray-500">Check-in</p>
                  <p class="font-medium">Mar 10, 2024</p>
                </div>
                <div>
                  <p class="text-gray-500">Check-out</p>
                  <p class="font-medium">Mar 15, 2024</p>
                </div>
                <div>
                  <p class="text-gray-500">Guests</p>
                  <p class="font-medium">2 Adults</p>
                </div>
              </div>
              <div class="mt-4 flex justify-between items-center">
                <div class="flex items-center">
                  <span class="text-2xl font-bold text-gray-900">$1,500</span>
                  <span class="text-gray-500 ml-1">total</span>
                </div>
                <button class="text-indigo-600 hover:text-indigo-700 font-medium">View Details →</button>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Pagination -->
      <div class="flex justify-center mt-8">
        <nav class="flex items-center space-x-2">
          <button class="p-2 rounded-lg hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="m15 18-6-6 6-6"/>
            </svg>
          </button>
          <button class="px-4 py-2 text-sm font-medium text-white bg-indigo-600 rounded-lg">1</button>
          <button class="px-4 py-2 text-sm font-medium text-gray-600 hover:bg-gray-100 rounded-lg">2</button>
          <button class="px-4 py-2 text-sm font-medium text-gray-600 hover:bg-gray-100 rounded-lg">3</button>
          <button class="p-2 rounded-lg hover:bg-gray-100">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="m9 18 6-6-6-6"/>
            </svg>
          </button>
        </nav>
      </div>
    </div>
  </body>
</html>